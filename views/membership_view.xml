<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

      <!-- Membership tree view -->
        <record id="membership_view_tree" model="ir.ui.view">
            <field name="name">membership.view.tree</field>
            <field name="model">membership.member</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Membership search view -->
        <record id="membership_view_search" model="ir.ui.view">
            <field name="name">membership.view.search</field>
            <field name="model">membership.member</field>
            <field name="arch" type="xml">
                <search string="Search Membership">
                    <!-- Add your fields here -->
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="membership_member_action" model="ir.actions.act_window">
            <field name="name">Member List</field>
            <field name="res_model">membership.member</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="membership_detail_menu_act" name="Member List" parent="membership_menu_categ" action="membership_member_action" sequence="10"/>

    </data>
</odoo>